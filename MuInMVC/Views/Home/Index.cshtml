<!-- features list section -->
<div class="list-section pt-80 pb-80">
	<div class="container">

		<div class="row">
			<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
				<div class="list-box d-flex align-items-center">
					<div class="list-icon">
						<i class="fas fa-shipping-fast"></i>
					</div>
					<div class="content">
						<h3>Miễn phí vận chuyển</h3>
						<p>Cho đơn hàng trên 20 triệu</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
				<div class="list-box d-flex align-items-center">
					<div class="list-icon">
						<i class="fas fa-phone-volume"></i>
					</div>
					<div class="content">
						<h3>Hỗ trợ 24/7</h3>
						<p>Nhận hỗ trợ mọi lúc</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="list-box d-flex justify-content-start align-items-center">
					<div class="list-icon">
						<i class="fas fa-sync"></i>
					</div>
					<div class="content">
						<h3>Hoàn trả</h3>
						<p>Bạn có thể hoàn trả trong 3 ngày!</p>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- end features list section -->
<!-- product section -->
<div class="product-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">Hot </span> Sản phẩm </h3>
					<p>Những sản phẩm mới ra mắt, cập nhật xu hướng, tận hưởng âm nhạc</p>
				</div>
			</div>
		</div>

		<div class="row">
			@foreach (var item in bestSeller)
			{
				<div class="col-lg-4 col-md-6 text-center strawberry">
					<div class="single-product-item">
						<div class="product-image w-100 mb-4" style="height:250px">
							<a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@item.ProductId"><img src=@(item.ProductImage != "" ? item.ProductImage : "/assets/img/products/product_default.jpg" ) style="width:100%; height:100%; object-fit:cover" alt="@item.ImageName"></a>
						</div>
						<h3>@item.ProductName</h3>
						<p class="product-price"> @item.ProductPrice.ToString("#,##0") VNĐ </p>
						<a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@item.ProductId" class="cart-btn"><i class="fas fa-shopping-cart"></i> Xem thêm </a>
					</div>
				</div>
			}				
		</div>
	</div>
</div>
<!-- end product section -->
<!-- cart banner section -->
<section class="cart-banner pt-100 pb-100">
	<div class="container">
		<div class="row clearfix">
			<!--Image Column-->
			<div class="image-column col-lg-6">
				<div class="image">
					<div class="price-box">
						<div class="inner-price">
							<span class="price">
								<strong>5%</strong> <br> off per items
							</span>
						</div>
					</div>
					<img src="assets/img/products/product_default.jpg" alt="">
				</div>
			</div>
			<!--Content Column-->
			<div class="content-column col-lg-6">
				<h3><span class="orange-text">Deal</span> of the month</h3>
				<h4>GUITAR AND PIANO</h4>
				<div class="text">Giảm giá 5% cho tất cả sản phẩm đến từ Yamaha và Casio đối với Guitar và Piano, nhận ngay discount tại đây</div>
				<!--Countdown Timer-->
				<div class="time-counter"><div class="time-countdown clearfix" data-countdown="2020/2/01"><div class="counter-column"><div class="inner"><span class="count">00</span>Days</div></div> <div class="counter-column"><div class="inner"><span class="count">00</span>Hours</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Mins</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Secs</div></div></div></div>
				<a href="cart.html" class="cart-btn mt-3"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
			</div>
		</div>
	</div>
</section>
